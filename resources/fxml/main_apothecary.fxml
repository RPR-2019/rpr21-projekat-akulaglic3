   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu text="%file">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#actionAddNewDrug" text="%addDrug" />
                  <MenuItem mnemonicParsing="false" onAction="#actionLogout" text="%logout" />
              <MenuItem onAction="#actionClose" text="%exit" />
            </items>
          </Menu>
          <Menu text="%help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#actionAbout" text="%about" />
