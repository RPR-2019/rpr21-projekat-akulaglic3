   <bottom>
      <ButtonBar maxHeight="1.7976931348623157E308" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#actionLogout" text="%logout" />
            <Button mnemonicParsing="false" onAction="#actionClose" text="%exit" />
        </buttons>
